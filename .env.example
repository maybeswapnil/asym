# Environment variables
APP_NAME=python-boilerplate
APP_VERSION=0.1.0
APP_DESCRIPTION=Production-ready Python boilerplate

# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/myapp
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://preview--cerebrum-challenge.lovable.app"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External APIs
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_KEY=your-api-key
EXTERNAL_API_TIMEOUT=30

# Monitoring
SENTRY_DSN=
METRICS_ENABLED=true

# File storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "application/pdf"]
